# ==============================================================================
# LOGOS VISION CRM - PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================
#
# CRITICAL: This file contains production configuration templates
# Copy to .env.production and fill in actual values
# NEVER commit .env.production to version control
#
# Last Updated: 2026-01-25
# For: Contacts Redesign Production Deployment
# ==============================================================================

# ==========================================
# SUPABASE CONFIGURATION (PRODUCTION)
# ==========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key_here

# ==========================================
# PULSE COMMUNICATION PLATFORM INTEGRATION
# ==========================================
# Primary API endpoint for contact intelligence
VITE_PULSE_API_URL=https://api.pulse.yourcompany.com
VITE_PULSE_API_KEY=prod_pulse_api_key_here

# Sync Configuration
VITE_PULSE_SYNC_ENABLED=true
VITE_PULSE_SYNC_INTERVAL_MINUTES=15
VITE_PULSE_API_TIMEOUT_MS=10000
VITE_PULSE_CACHE_DURATION_MINUTES=5

# Feature Flags for Pulse Integration
VITE_PULSE_ENABLE_AI_INSIGHTS=true
VITE_PULSE_ENABLE_GOOGLE_SYNC=true
VITE_PULSE_ENABLE_AUTO_SYNC=true

# Optional: Pulse Supabase (if separate database)
VITE_PULSE_SUPABASE_URL=https://your-pulse-instance.supabase.co
VITE_PULSE_SUPABASE_KEY=your_pulse_anon_key_here

# ==========================================
# CONTACTS REDESIGN FEATURE FLAGS
# ==========================================
# Master switch for new contacts interface
VITE_FEATURE_CONTACTS_REDESIGN=true

# Individual feature toggles
VITE_FEATURE_PRIORITIES_FEED=true
VITE_FEATURE_AI_INSIGHTS=true
VITE_FEATURE_RELATIONSHIP_SCORING=true
VITE_FEATURE_BULK_CONTACT_IMPORT=true
VITE_FEATURE_INCREMENTAL_SYNC=true

# ==========================================
# AI FEATURES (GEMINI API)
# ==========================================
# For document classification, OCR, auto-tagging
VITE_GEMINI_API_KEY=your_production_gemini_key_here

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Error tracking with Sentry
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ERROR_SAMPLE_RATE=1.0

# Analytics tracking
VITE_ANALYTICS_ENABLED=true
VITE_POSTHOG_API_KEY=your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.25

# ==========================================
# EMAIL SERVICE (RESEND)
# ==========================================
VITE_RESEND_API_KEY=re_prod_resend_key_here
VITE_EMAIL_FROM=notifications@logosvision.com
VITE_EMAIL_FROM_NAME=Logos Vision CRM
VITE_EMAIL_REPLY_TO=support@logosvision.com

# Rate limiting
VITE_EMAIL_MAX_PER_MINUTE=10
VITE_EMAIL_MAX_PER_HOUR=100
VITE_EMAIL_MAX_PER_DAY=1000

# ==========================================
# CALENDAR OAUTH CREDENTIALS
# ==========================================
# Google Calendar
VITE_GOOGLE_CLIENT_ID=your_prod_google_client_id
VITE_GOOGLE_CLIENT_SECRET=your_prod_google_client_secret
VITE_GOOGLE_REDIRECT_URI=https://app.logosvision.com/auth/callback/google

# Microsoft Calendar
VITE_MICROSOFT_CLIENT_ID=your_prod_microsoft_client_id
VITE_MICROSOFT_CLIENT_SECRET=your_prod_microsoft_client_secret
VITE_MICROSOFT_REDIRECT_URI=https://app.logosvision.com/auth/callback/microsoft

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
VITE_APP_URL=https://app.logosvision.com
VITE_API_URL=https://api.logosvision.com
VITE_DEV_MODE=false

# Default timezone
VITE_DEFAULT_TIMEZONE=America/New_York

# ==========================================
# SECURITY SETTINGS
# ==========================================
# CORS allowed origins (comma-separated)
VITE_ALLOWED_ORIGINS=https://app.logosvision.com,https://pulse.yourcompany.com

# Session timeout (minutes)
VITE_SESSION_TIMEOUT_MINUTES=480

# Enable security headers
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# ==========================================
# PERFORMANCE OPTIMIZATION
# ==========================================
# CDN configuration
VITE_CDN_URL=https://cdn.logosvision.com

# Asset optimization
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_CHUNK_SIZE_LIMIT_KB=500

# ==========================================
# ROLLOUT CONFIGURATION
# ==========================================
# Gradual rollout percentage (0-100)
VITE_ROLLOUT_PERCENTAGE=100

# A/B testing group assignment
VITE_ENABLE_AB_TESTING=false
VITE_AB_TEST_VARIANT=control

# ==========================================
# FEATURE ROLLBACK KILL SWITCHES
# ==========================================
# Emergency disable switches (set to false to disable features)
VITE_EMERGENCY_DISABLE_CONTACTS=false
VITE_EMERGENCY_DISABLE_PULSE_SYNC=false
VITE_EMERGENCY_DISABLE_AI_FEATURES=false

# ==========================================
# LOGGING & DEBUGGING
# ==========================================
# Production logging level (error, warn, info, debug)
VITE_LOG_LEVEL=warn

# Enable debug logging for specific features
VITE_DEBUG_PULSE_SYNC=false
VITE_DEBUG_CONTACT_IMPORT=false
VITE_DEBUG_API_CALLS=false

# ==========================================
# BACKUP & DISASTER RECOVERY
# ==========================================
# Backup API endpoint (if available)
VITE_BACKUP_API_URL=https://backup.logosvision.com
VITE_ENABLE_AUTO_BACKUP=true
VITE_BACKUP_INTERVAL_HOURS=24

# ==========================================
# COMPLIANCE & AUDIT
# ==========================================
# Enable audit logging
VITE_ENABLE_AUDIT_LOG=true
VITE_AUDIT_LOG_RETENTION_DAYS=90

# GDPR compliance
VITE_ENABLE_GDPR_MODE=true
VITE_DATA_RETENTION_DAYS=365
